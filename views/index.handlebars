<div class="col-lg-4 col-md-12 formSection">
    <form class="filterForm">
        <div class="col-12">
            <h1>Find A Table Now</h1>
        </div>
        <div class="form-group">
            <div class="col-12">
                <label class="filterInput" for="location">Location</label>
                <input type="text" id="fullname" class="form-control">
            </div>
        </div>
        <div class="form-group">
            <div class="col-12">
                <label for="cuisine">Cuisine</label>
                <select name="#" id="cuisine" class="form-control">
                    <option value="">Japanese</option>
                    <option value="">Korean</option>
                    <option value="">Thai</option>
                    <option value="">Chinese</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-12">
                <label for="destination">Maximum Distance (Radius)</label>
                <select name="#" id="destination" class="form-control">
                    <option value="">1km</option>
                    <option value="">2km</option>
                    <option value="">3km</option>
                    <option value="">4km</option>
                </select>
            </div>
        </div>
        <div class=form-group>
            <div class="col-12">
                <label for="date-start">Date</label>
                <input type="text" id="date-start" class="form-control">
            </div>
        </div>
        <div class="form-group">
            <div class="col-12">
                <input type="submit" class="btn btn-primary btn-block" value="Search">
            </div>
        </div>
        <div class="col-12 logoutRedirect">
            <a href="/logout">Logout</a>
        </div>
    </form>
</div>